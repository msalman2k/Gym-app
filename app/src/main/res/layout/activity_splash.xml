<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/logo_gif"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:src="@drawable/logo">

    </pl.droidsonroids.gif.GifImageView>

    <TextView
        android:id="@+id/splashlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.Beast"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_below="@id/logo_gif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="monospace">
    </TextView>

    <ImageView
        android:id="@+id/lowerline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_horizontal_rule_24"
        android:layout_below="@+id/splashlogo"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/upperline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_horizontal_rule_24"
        android:layout_above="@+id/splashlogo"
        android:layout_marginBottom="-30dp"
        />
</RelativeLayout>